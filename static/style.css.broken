body {
    background-color: rgba(0, 0, 0, 0);
    /* 투명 배경 */
    margin: 0;
    padding: 0;
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    color: white;
    overflow: hidden;
    /* 스크롤바 숨김 */
}

.container {
    width: 400px;
    /* 오버레이 크기 조절 */
    background: rgba(0, 0, 0, 0.7);
    /* 반투명 검정 배경 */
    border-radius: 10px;
    padding: 15px;
    display: flex;
    align-items: center;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.3);
}

.rank-badge {
    font-size: 1.2em;
    font-weight: bold;
    color: #ffd700;
    /* 골드 색상 */
    margin-right: 15px;
    text-transform: uppercase;
}

.details {
    display: flex;
    flex-direction: column;
}

.name {
    font-size: 1.5em;
    font-weight: bold;
    margin-bottom: 5px;
}

.lp,
.character {
    font-size: 1em;
    color: #cccccc;
}

/* Dashboard Styles */
.dashboard-body {
    background-color: #1a1a1a;
    color: #ffffff;
    font-family: 'Inter', sans-serif;
    display: flex;
    justify-content: center;
    align-items: center;
    min-height: 100vh;
    overflow: auto;
}

.dashboard-container {
    width: 100%;
    max-width: 800px;
    padding: 20px;
}

header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 30px;
}

h1 {
    margin: 0;
    font-size: 1.8rem;
    background: linear-gradient(45deg, #ff6b6b, #feca57);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
}

.card {
    background: #2d2d2d;
    border-radius: 12px;
    padding: 20px;
    margin-bottom: 20px;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.2);
}

.card h2 {
    margin-top: 0;
    margin-bottom: 15px;
    font-size: 1.2rem;
    color: #a4b0be;
    border-bottom: 1px solid #404040;
    padding-bottom: 10px;
}

.status-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
    gap: 15px;
}

.status-item {
    display: flex;
    flex-direction: column;
    background: #353535;
    padding: 10px;
    border-radius: 8px;
}

.status-item .label {
    font-size: 0.8rem;
    color: #888;
    margin-bottom: 5px;
}

.value {
    font-weight: 600;
}

.value.success {
    color: #2ed573;
}

.value.error {
    color: #ff4757;
}

.value.pending {
    color: #ffa502;
}

.status-badge {
    padding: 5px 10px;
    border-radius: 20px;
    font-size: 0.8rem;
    font-weight: bold;
}

.status-badge.connected {
    background: #2ed573;
    color: #1e272e;
}

.status-badge.disconnected {
    background: #ff4757;
    color: white;
}

.button-group {
    display: flex;
    gap: 10px;
    margin-bottom: 10px;
}

.btn {
    transform: scale(0.98);
}

.btn:disabled {
    opacity: 0.6;
    cursor: not-allowed;
}

.btn.primary {
    background: #3742fa;
    color: white;
}

.btn.secondary {
    background: #57606f;
    color: white;
}

.hint {
    font-size: 0.85rem;
    color: #747d8c;
    margin: 0;
}

.data-display {
    background: #1e1e1e;
    padding: 15px;
    border-radius: 8px;
    font-family: monospace;
}

.player-info .info-row {
    display: flex;
    justify-content: space-between;
    padding: 5px 0;
    border-bottom: 1px solid #333;
}

